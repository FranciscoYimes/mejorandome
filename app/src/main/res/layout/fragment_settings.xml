<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mejorandome.mejorandome.fragments.SettingsFragment">

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                style="@style/AccentButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Cambiar Imagen de Perfil" />

            <Button
                style="@style/AccentButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Agrear imagen a la lista" />

            <Button
                android:id="@+id/change_pass_option"
                style="@style/AccentButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Cambiar Contraseña" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/change_pass_layout"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="300dp"
                android:layout_height="wrap_content">

                <EditText
                    style="@style/EditText"
                    android:id="@+id/password1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:hint="Contraseña Actual"
                    android:inputType="textPassword" />

                <EditText
                    style="@style/EditText"
                    android:id="@+id/password2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:hint="Nueva Contraseña"
                    android:inputType="textPassword" />

                <TextView
                    android:id="@+id/change_pass_message"
                    android:visibility="gone"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Contraseña cambiada con exito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/change_pass_button"
                    style="@style/AccentButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Cambiar Contraseña" />

            </LinearLayout>

            <Button
                android:layout_marginTop="50dp"
                android:id="@+id/logout_button"
                style="@style/AccentButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Cerrar Sesión" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>